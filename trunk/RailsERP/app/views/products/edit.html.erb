<h1><%= t 'products_edit_headline' %></h1>

<%= error_messages_for :product %>

<% form_for(@product , :html => { :multipart => true }) do |f| %>
  <p>
    <b><%= t 'products_editnewshowindex_name' %></b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b><%= t 'products_editnewshowindex_price' %></b><br />
    <%= f.text_field :price %>
  </p>

  <p>
    <b><%= t 'products_editnewshowindex_info' %></b><br />
    <%= f.text_area :info %>
  </p>

    <p>
    <b><%= t 'products_editnewshowindex_image' %></b><br />
    <%= f.file_field :file%>
  </p>

  <p>
    <%= f.submit t('products_editnewshowindex_update') %>
  </p>
<% end %>

<%= link_to t('products_editnewshowindex_show'), @product %> |
<%= link_to t('products_editnewshowindex_back'), products_path %>
