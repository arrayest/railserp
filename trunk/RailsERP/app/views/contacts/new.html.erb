<h1>New contact</h1>

<%= error_messages_for :contact %>

<% form_for(@contact) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Lastname</b><br />
    <%= f.text_field :lastname %>
  </p>

  <p>
    <b>Position</b><br />
    <%= f.text_field :position %>
  </p>

  <p>
    <b>Tel</b><br />
    <%= f.text_field :tel %>
  </p>

  <p>
    <b>Mobile</b><br />
    <%= f.text_field :mobile %>
  </p>

  <p>
    <b>Email</b><br />
    <%= f.text_field :email %>
  </p>

  <p>
    <b>Info</b><br />
    <%= f.text_field :Info %>
  </p>

  <p>
    <b>Birthday</b><br />
    <%= f.date_select :birthday , :start_year => 1930 , :end_year => 2008 %>
  </p>

  <p>
    <b>Company</b><br />
    <%= f.collection_select :company_id ,@companies, :id, :name %>
  </p>

    <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', contacts_path %>
