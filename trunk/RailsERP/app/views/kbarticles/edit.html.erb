<h1><%= t 'kbarticles_edit_headline' %></h1>

<%= error_messages_for :kbarticle %>

<% form_for(@kbarticle) do |f| %>
  <p>
    <b><%= t 'kbarticles_editnewshowindex_symptoms' %></b><br />
    <%= f.text_area :symptoms %>
  </p>

  <p>
    <b><%= t 'kbarticles_editnewshowindex_cause' %></b><br />
    <%= f.text_area :cause %>
  </p>

  <p>
    <b><%= t 'kbarticles_editnewshowindex_solution' %></b><br />
    <%= f.text_area :solution %>
  </p>

  <p><b><%= t 'kbarticles_editnewshowindex_kbcat' %></b><br />
    <%= f.collection_select :kbcat_id ,@kbcats, :id, :name %>
  </p>

  <p><b><%= t 'kbarticles_editnewshowindex_kblang' %></b><br />
    <%= f.collection_select :kblang_id ,@kblangs, :id, :language %>
  </p>


  <p>
    <%= f.submit t('kbarticles_editnewshowindex_update') %>
  </p>
<% end %>

<%= link_to t('kbarticles_editnewshowindex_show'), @kbarticle %> |
<%= link_to t('kbarticles_editnewshowindex_back'), kbarticles_path %>
