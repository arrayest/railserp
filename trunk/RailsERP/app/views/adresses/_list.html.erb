<table border="1px">
  <tr>
    <th><%= t 'adress_editnewshowindex_street' %></th>
    <th><%= t 'adress_editnewshowindex_streetnr' %></th>
    <th><%= t 'adress_editnewshowindex_city' %></th>
    <th><%= t 'adress_editnewshowindex_region' %></th>
    <th><%= t 'adress_editnewshowindex_country' %></th>
    <th><%= t 'adress_editnewshowindex_postcode' %></th>
    <th><%= t 'adress_editnewshowindex_company' %></th>
  </tr>

<% for adress in adresses %>
  <tr>
    <td><%=h adress.street %></td>
    <td><%=h adress.streetnr %></td>
    <td><%=h adress.city %></td>
    <td><%=h adress.region %></td>
    <td><%=h adress.country %></td>
    <td><%=h adress.postcode %></td>
    <td><%=h adress.company.name%></td>
    <td><%= link_to image_tag("/images/icons/actions/edit-find.png",:height => '24', :width => '24')+ t('adress_editnewshowindex_show'), adress %></td>
    <td><%= link_to image_tag("/images/icons/actions/edit-find-replace.png",:height => '24', :width => '24')+ t('adress_editnewshowindex_edit'), edit_adress_path(adress) %></td>
    <td><%= link_to image_tag("/images/icons/actions/edit-delete.png",:height => '24', :width => '24')+t('adress_editnewshowindex_delete'), adress, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>