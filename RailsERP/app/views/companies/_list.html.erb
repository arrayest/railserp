<table border="1px">
  <tr>
    <th><%= t 'companies_editnewshowindex_name' %></th>
    <th><%= t 'companies_editnewshowindex_companyart' %></th>
  </tr>

<% for company in companies %>
  <tr>
    <td><%=h company.name %></td>
    <td><%=h company.companyart.name %></td>
    <td><%= link_to image_tag("/images/icons/actions/edit-find.png",:height => '24', :width => '24')+ t('companies_editnewshowindex_show') , company %></td>
    <td><%= link_to image_tag("/images/icons/actions/edit-find-replace.png",:height => '24', :width => '24')+ t('companies_editnewshowindex_edit'), edit_company_path(company) %></td>
    <td><%= link_to image_tag("/images/icons/actions/edit-delete.png",:height => '24', :width => '24')+t('companies_editnewshowindex_delete'), company, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>