<table>
  <tr>
    <th><%= t 'datetasks_editnewshowindex_taskname' %></th>
    <th><%= t 'datetasks_editnewshowindex_info' %></th>
    <th><%= t 'datetasks_editnewshowindex_progress' %></th>
    <th><%= t 'datetasks_editnewshowindex_dateprio' %></th>
    <th><%= t 'datetasks_editnewshowindex_datestatus' %></th>
    <th><%= t 'datetasks_editnewshowindex_date' %></th>
  </tr>

<% for datetask in datetasks %>
  <tr>
    <td><%=h datetask.taskname %></td>
    <td><%=h datetask.info %></td>
    <td><%=h datetask.progressed %></td>
    <td><%=h datetask.dateprio.prio %></td>
    <td><%=h datetask.datestatus.status %></td>
    <td><%=h datetask.caldate.info %></td>
    <td><%= link_to image_tag("/images/icons/actions/edit-find.png",:height => '24', :width => '24')+ t('datetasks_editnewshowindex_show'), datetask %></td>
    <td><%= link_to image_tag("/images/icons/actions/edit-find-replace.png",:height => '24', :width => '24')+ t('datetasks_editnewshowindex_edit'), edit_datetask_path(datetask) %></td>
    <td><%= link_to image_tag("/images/icons/actions/edit-delete.png",:height => '24', :width => '24')+t('datetasks_editnewshowindex_delete'), datetask, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>