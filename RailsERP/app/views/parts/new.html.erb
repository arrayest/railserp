<h1><%= t 'parts_new_headline' %></h1>

<%= error_messages_for :part %>

<% form_for(@part, :html => { :multipart => true }) do |f| %>
  <p>
    <b><%= t 'parts_editnewshowindex_name' %></b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b><%= t 'parts_editnewshowindex_price' %></b><br />
    <%= f.text_field :price %>
  </p>

  <p>
    <b><%= t 'parts_editnewshowindex_info' %></b><br />
    <%= f.text_area :info %>
  </p>

  <p>
    <b><%= t 'parts_editnewshowindex_image' %></b><br />
    <%= f.file_field :file %>
  </p>

  <p>
    <%= f.submit t('parts_editnewshowindex_create') %>
  </p>
<% end %>

<%= link_to t('parts_editnewshowindex_back'), parts_path %>
