<h1>Editing part</h1>

<%= error_messages_for :part %>

<% form_for(@part, :html => { :multipart => true }) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Price</b><br />
    <%= f.text_field :price %>
  </p>

  <p>
    <b>Info</b><br />
    <%= f.text_area :info %>
  </p>

  <p>
    <b>Image</b><br />
    <%= f.file_field :file%>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @part %> |
<%= link_to 'Back', parts_path %>
