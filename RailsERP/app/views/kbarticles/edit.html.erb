<h1>Editing kbarticle</h1>

<%= error_messages_for :kbarticle %>

<% form_for(@kbarticle) do |f| %>
  <p>
    <b>Symptoms</b><br />
    <%= f.text_area :symptoms %>
  </p>

  <p>
    <b>Cause</b><br />
    <%= f.text_area :cause %>
  </p>

  <p>
    <b>Solution</b><br />
    <%= f.text_area :solution %>
  </p>

  <p><b>Kbcat</b><br />
    <%= f.collection_select :kbcat_id ,@kbcats, :id, :name %>
  </p>

  <p><b>Kblang</b><br />
    <%= f.collection_select :kblang_id ,@kblangs, :id, :language %>
  </p>


  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @kbarticle %> |
<%= link_to 'Back', kbarticles_path %>
